{% for redirect in nginx_redirects %}
server {
    listen {{ redirect.server_ip + ':' if redirect.server_ip is defined else '' }}{{ nginx_port }};
    server_name {{ redirect.server_name }} {{ redirect.server_aliases | join (' ') }};

    # Turn off logging
    error_log off;
    access_log off;

    # Redirect
    return  301 {{ redirect.redirect }}$request_uri;
}

{% endfor %}
